{% style %}
  .product-card-wrapper {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    width: 100%;
    height: 100%;
    gap: 20px;
  }
  .main-search-container {
    background-color: #F3FBFE;
    padding: 20px 10%;
    max-width: 1920px;
    margin: 0 auto;
  }
  .main-search-collection {
    margin-top: 20px;
  }
  .main-search-collection.title {
    margin: 0 0 10px 0;
    font-weight: bold;
    color: #005496;
    font-size: 26px;
  }
  @media (max-width: 1440px) {
    .product-card-wrapper {
      grid-template-columns: repeat(3, 1fr);
  }
  @media (max-width: 768px) {
    .main-search-container {
      padding: 20px 24px;
    }
    .product-card-wrapper {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
    }
  }
{% endstyle %}

{% style %}
  .product-card-container {
    width: 100%;
    min-height: 100%;
    display: flex;
    gap: 15px;
    padding: 10px;
    flex-direction: column;
    background-color: white;
    border-radius: 15px;
    box-shadow: var(--box-shadow);
  }
  .product-card-country {
    display: flex;
    width: 100%;
    gap: 10px;
    align-items: center;
    justify-content: left;
    align-text: center;
  }
  .product-card-country h1 {
    mdisplay: flex;
    margin: 0;
    color: #005496;
    font-size: 20px;
    font-weight: bold;
    white-space: wrap;
    text-overflow: ellipsis;
  }
  .product-card-icon-single-flag {
    border-radius: 15px;
    border: 1px solid #D9D9D9;
  }
  .product-card-multi-flag {
    gap: 3px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    border-radius: 5px;
  }
  .product-card-icon-multi-flag {
    gap: 3px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    border-radius: 5px;
    border: 1px solid #D9D9D9;
  }
  .product-card-flag-count {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 25px;
    height: 25px;
    border: 1px solid #D9D9D9;
    border-radius: 5px;
    color: #005496;
    background-color: white;
  }
  .product-card-flag-count span {
    color: #005496;
    font-weight: bold;
    font-size: 10px;
    font-weight: bold;
  }
  /* content */
  .product-card-field-icons {
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
  }
  .product-card-field-icons h1 {
    font-size: 18px;
    font-weight: bold;
    color: #005496;
  }
  .product-card-field-icons h2 {
      word-break: break-all;
      -webkit-line-clamp: 2;
  }
  .product-card-field {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px ridge;
    padding: 10px 0;
  }
  img.field-icon {
    width: 30px;
    height: 30px;
    align-items: center;
  }
  .product-card-field h2 {
    color: #00ADEE;
    font-weight: bold;
    font-size: 16px;
  }
  .product-card-btn {
    width: 100%;
    height: 55px;
    background-color: #005496;
    border: none;
    border-radius: 20px;
    font-weight: 16px;
  }
  .product-card-btn a p {
    font-weight: bold;
    color: #ffffff;
    font-size: 16px;
    text-decoration: none;
  }
  /* content */
  .product-card-content {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;  /* Pastikan tingginya tetap penuh */
    border-radius: 10px;
    transform-style: preserve-3d;
    transition: transform 0.6s ease-in-out;
    will-change: transform;
  }
  .country-total-atribut-wrapper {
    display: inline-block; /* Agar width bisa diterapkan */
    max-width: 125px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  .country-total-atribut span {
    color: #00ADEE;
    width: 100%;
    max-width: 125px;
    font-weight: bold;
    font-size: 12px;
    margin: 0;
  }
  .country-total-atribut button {
    cursor: pointer;
    border-radius: 10px;
    padding: 10px;
    width: 100%;
    border: 1px solid #00ADEE;
    background: none;
  }
  .country-total-including-atribut {
    background-color: #00ADEE;
    width: 100%;
    text-align: center;
    border-radius: 5px;
  }
  .country-total-including-atribut p {
    margin: 5px;
    color: #ffffff;
    font-weight: bold;
    font-size: 12px;
  }
  .product-card-content-flip-front,
  .product-card-content-flip-back {
    position: relative;
    width: 100%;
    height: 100%;
    dsplay: flex;
    flex-direction: column;
    gap: 7px;
    backface-visibility: hidden;
    transition: transform 0.6s ease-in-out;
  }
  .product-card-container .product-card-content {
    transform: rotateY(0deg);
    transition: transform 0.6s ease-in-out;
  }

  .product-card-container.flipped .product-card-content {
    transform: rotateY(180deg);
  }

  .product-card-content-flip-back {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    overflow-y: auto;
    max-height: 100%;
    background: #ffffff;
    text-align: center;
    cursor: pointer;
    transform: rotateY(180deg);
  }
{% endstyle %}

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll("#flipped").forEach(function (button) {
      button.addEventListener("click", function (event) {
        event.stopPropagation(); // Mencegah event dari menyebar ke elemen lain
        let card = this.closest(".product-card-container");
        card.classList.toggle("flipped"); // Tambah/hapus class flipped
      });
    });

    document.addEventListener("click", function (event) {
      document.querySelectorAll(".product-card-container.flipped").forEach(function (card) {
        // Jika klik terjadi di dalam .product-card-content-flip-back, tetap reset flip
        if (!card.contains(event.target) || event.target.closest(".product-card-content-flip-back")) {
          card.classList.remove("flipped");
        }
      });
    });
  });
</script>

